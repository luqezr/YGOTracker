<div class="row" id="decksDiv">
  {{#each wishlists}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        
        <p id="aCard">{{ cards }}</p>
        <!-- DELETE REQUEST -->
        <form action="/wishlists/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">remove</button>
        </form>
      </div>
    </div>
  </div>


  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">There are no Cards in your Wishlist!</p>
      <a href="/wishlists/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>
